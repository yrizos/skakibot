# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Match JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.yml]
[*.yaml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false